{
  "hooks": {
    "BeforeTool": [
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "linter-hook",
            "type": "command",
            "command": "node \"${extensionPath}${/}dist${/}hooks${/}linter_hook.cjs\"",
            "description": "ファイルの書き込み・置換前に構文エラー（JS/TS/JSON等）をチェックします。"
          }
        ]
      },
      {
        "matcher": "activate_skill",
        "hooks": [
          {
            "name": "expert-docs-hook",
            "type": "command",
            "command": "node \"${extensionPath}${/}dist${/}hooks${/}expert_docs_hook.cjs\"",
            "description": "gemini-cli-expert スキルの起動時にドキュメントの更新を確認します。"
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "write_file|replace",
        "hooks": [
          {
            "name": "open-file-hook",
            "type": "command",
            "command": "node \"${extensionPath}${/}dist${/}hooks${/}open_file_hook.cjs\"",
            "description": "成果物（Markdown/TOML等）が書き込まれたら、人間が確認・調整できるよう VSCode で自動的に開きます。"
          }
        ]
      }
    ]
  }
}
